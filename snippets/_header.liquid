<header class="js--header sticky top-0 z-50 flex flex-col h-16 w-full px-4 [transform:translate3d(0,0,0)] justify-center backdrop-blur transition-shadow duration-100 print:hidden">
  <nav class="navbar py-0 max-w-[var(--max-content-width)] mx-auto px-0">
    <div class="flex flex-1 items-center gap-3">
      <span class="tooltip tooltip-bottom before:text-xs before:content-[attr(data-tip)]" data-tip="菜单">
        <label for="js--main-drawer" class="btn btn-square btn-ghost drawer-button" :class="isHomePage ? '' : 'lg:hidden'">
          <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-5 w-5 stroke-current md:h-6 md:w-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </label>
      </span>
      {% render 'header_logo' %}
      {% assign header_menu_html = site.settings.header_menu_html | presence %}
      {% if header_menu_html %}
        {{ header_menu_html }}
      {% endif %}
    </div>

    <div class="flex items-center space-x-3">
      <!-- Right side elements links -->
      <div class="hidden w-full max-w-sm lg:flex ml-8" x-show="!isHomePage">
        {% form_tag 'search', class: 'w-full' %}
          <label class="input border border-gray-300 rounded-full">
            <svg class="h-[1.2em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <g
                stroke-linejoin="round"
                stroke-linecap="round"
                stroke-width="2.5"
                fill="none"
                stroke="currentColor"
              >
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.3-4.3"></path>
              </g>
            </svg>
            <input class="grow" type="search" name="{{ form.keywords_field_name }}" value="{{ params.q }}" placeholder="{{ "snippets.header.search_placeholder" | t }}">
          </label>
        {% endform_tag %}
      </div>

      <!-- Theme switcher -->
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="header-nav-icon-button">
          <svg data-theme-target="currentIcon" class="size-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z" />
          </svg>
        </div>
        <ul tabindex="0" class="dropdown-content z-50 mt-3 menu p-2 shadow bg-base-200 rounded-box">
          <li>
            <button data-action="theme#toggle" data-theme-mode-param="light" class="flex items-center gap-2 flex-nowrap">
              <svg data-theme-target="lightIcon" class="size-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z" />
              </svg>
              <span class="text-sm text-nowrap">亮色</span>
            </button>
          </li>
          <li>
            <button data-action="theme#toggle" data-theme-mode-param="dark" class="flex items-center gap-2 flex-nowrap">
              <svg data-theme-target="darkIcon" class="size-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z" />
              </svg>
              <span class="text-sm text-nowrap">暗色</span>
            </button>
          </li>
          <li>
            <button data-action="theme#toggle" data-theme-mode-param="auto" class="flex items-center gap-2 flex-nowrap">
              <svg data-theme-target="autoIcon" class="size-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 8a2.83 2.83 0 0 0 4 4 4 4 0 1 1-4-4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.9 4.9 1.4 1.4"/><path d="m17.7 17.7 1.4 1.4"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.3 17.7-1.4 1.4"/><path d="m19.1 4.9-1.4 1.4"/>
              </svg>
              <span class="text-sm text-nowrap">自动</span>
            </button>
          </li>
        </ul>
      </div>

      {% if current_user %}
        {% assign user_name = current_user.name | presence %}
        {% if user_name %}
          {% assign user_name = user_name | escape_once %}
        {% else %}
          {% assign user_name = "user.default_name" | t %}
        {% endif %}
        {% assign user_avatar = current_user.image | presence %}

        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="header-nav-icon-button">
              {% if user_avatar %}
                <div class="avatar">
                  <img src="{{user_avatar}}" class="size-full">
                </div>
              {% else %}
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                  stroke="currentColor" class="size-full rounded-full">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>
              {% endif %}
          </div>    
          <ul tabindex="0" class="dropdown-content z-50 mt-3 menu p-2 shadow bg-base-200 rounded-box w-36">
            <li class="menu-title text-xs">{{ "user.logged_in_menu_title" | t }}</li>
            <li>
              <button type="button">{{ user_name }}</button>
            </li>
            <li class="flex">
              <label>
                {% form_tag 'sign_out', class: "" %}
                  <button type="submit" class="cursor-pointer">{{ "user.sign_out" | t }}</button>
                {% endform_tag %}
              </label>
            </li>
          </ul>
        </div>
      {% else %}
        <button class="btn btn-primary">{{ "snippets.header.sign_in_button" | t }}</button>
      {% endif %}
    </div>
  </nav>
</header>
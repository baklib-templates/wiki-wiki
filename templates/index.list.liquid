<div>
  <section class="mx-auto max-w-[var(--max-content-width)] h-full">
    <div class="flex flex-col h-full">
      <div class="md:w-[80%] mx-auto md:px-16 md:py-8 bg-white md:border rounded border-slate-200 dark:bg-slate-600 text-slate-600 dark:text-slate-50 h-full">
        <h1 class="text-2xl text-center">{{ site.name }}</h1>
        <p class="mt-3 leading-6 text-center truncate">{{ site.settings.description }}</p>

        {%# 内容 %}
        <div class="w-full md:px-4 no-scrollbar">
          <!-- Docs nav -->
          {% render 'index_list_tree', nav_tree: site.nav_tree %}
        </div>
      </div>
    </div>
  </section>
</div>
{% schema %}
  {
    "name": "t:schema.templates.index.list.name",
    "description": "t:schema.templates.index.list.description",
    "thumb_url": "images/schema/index-list.png",
    "preview_image_urls": [
      "images/schema/index-list.png"
    ],
    "sub_page_templates": ["page"],
    "settings": []
  }
{% endschema %}

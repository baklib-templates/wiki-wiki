<main class="grow">
  <section class="flex-grow mx-auto sm:px-0">
    <div class="h-full max-w-5xl md:py-8 mx-auto">
      <div class="md:px-16 md:py-8 bg-white md:border rounded border-slate-200 dark:bg-slate-600 text-slate-600 dark:text-slate-50">
        <div class="max-w-3xl mx-auto min-w-64">
          <h1 class="text-2xl text-center">{{ site.name }}</h1>
          <p class="mt-3 leading-6 text-center truncate">{{ site.settings.description }}</p>

          {%# 内容 %}
          <div class="w-full px-4 sm:px-6 no-scrollbar">
            <!-- Docs nav -->
            {% render 'index_list_tree', nav_tree: site.nav_tree %}
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
{% schema %}
  {
    "name": "t:schema.templates.index.list.name",
    "description": "t:schema.templates.index.list.description",
    "thumb_url": "images/schema/${lang}/index-list.png",
    "preview_image_urls": [
      "images/schema/${lang}/index-list.png"
    ],
    "sub_page_templates": ["page"],
    "settings": [
        {
          "id": "description",
          "type": "text",
          "label": "t:settings_schema.generic.settings.description.label",
          "default": "👋 What Can We Help?"
        },
        {
          "id": "copyright_info",
          "type": "text",
          "label": "t:settings_schema.generic.settings.copyright_info.label",
          "default": "t:settings_schema.generic.settings.copyright_info.default"
        },
        {
          "id": "nav_tree_expanded",
          "type": "checkbox",
          "label": "默认栏目树是否展开",
          "default": false
        }
      ]
  }
{% endschema %}

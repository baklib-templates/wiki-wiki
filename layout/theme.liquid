<!doctype html>
<html lang="{{ site.language }}" class="scroll-smooth" data-controller="theme">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="turbo-prefetch" content="false">
    {% meta_tags %}
    {{ 'javascripts/application.js' | asset_url | script_tag: defer: true, data-turbo-track: 'reload' }}
    {{ 'stylesheets/application.css' | asset_url | stylesheet_tag: data-turbo-track: 'reload' }}
    
    <style>
      :root {
        --max-content-width: {{ site.settings.screen_width.value | presence | default: '1200px' }};
        --left-sidebar-width: {{ site.settings.left_sidebar_width.value | presence | default: '240px' }};
        --right-sidebar-width: {{ site.settings.right_sidebar_width.value | presence | default: '240px' }};
        --header-height: {{ site.settings.header_height.value | presence | default: '64px' }};
      }
    </style>

    {% assign head_html = site.settings.head_html | presence %}
    {% if head_html %}
      <!-- start head_html -->
      {{ head_html }}
      <!-- end head_html -->
    {% endif %}
  </head>
  <body id="js--body" class="grid grid-rows-[auto_1fr_auto] min-h-screen" x-data="{ isHomePage: false }" x-init="isHomePage = location.pathname === '{{ site.index_path }}'">
    {% render 'header' %}
    {{ content_for_layout }}
    {% render 'footer' %}
  </body>
</html>

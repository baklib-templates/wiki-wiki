  {
    "name": "t:settings_schema.generic.name",
    "settings": [
      {
        "id": "logo_url",
        "type": "image_picker",
        "ratio": "3:1",
        "width": 150,
        "label": "t:settings_schema.generic.settings.logo_url.label",
        "info": "若设置了logo，则页头显示 logo，否则显示：网站图标+站点名称"
      },
      {
        "id": "company_name",
        "label": "t:settings_schema.generic.settings.company_name.label",
        "type": "text",
        "default": "t:settings_schema.generic.settings.company_name.default",
        "info": "显示在页面底部页脚位置"
      },
      {
        "id": "copyright_info",
        "type": "text",
        "label": "t:settings_schema.generic.settings.copyright_info.label",
        "default": "t:settings_schema.generic.settings.copyright_info.default"
      },
      {
        "id": "screen_width",
        "type": "radio",
        "label": "页面宽度设置",
        "choices": [{"label":"窄（max-width: 1024px）","value":"max-w-screen-lg"},{"label":"适中（max-width: 1280px;）","value":"max-w-screen-xl"},{"label":"宽（max-width: 1536px;）","value":"max-w-screen-2xl"}],
        "default": "max-w-screen-xl"
      },
      {
        "id": "page_bg_type",
        "type": "radio",
        "label": "页面背景设置",
        "choices": [{"label":"无背景色","value":"0"},{"label":"primary+secondary变体渐变","value":"1"},{"label":"primary主色渐变","value":"2"}],
        "default": "0",
        "info": "* 跟随站点【主题颜色】设置的 primary/secondary 颜色"
      },
      {
        "id": "show_channel_section",
        "type": "checkbox",
        "label": "首页显示栏目导航",
        "default": false
      },
      {
        "id": "show_card_icon",
        "type": "checkbox",
        "label": "首页显示栏目ICON图标",
        "default": true
      },
      {
        "id": "show_newest_section",
        "type": "checkbox",
        "label": "首页显示最新 10 条",
        "default": false
      },
      {
        "id": "show_hottest_section",
        "type": "checkbox",
        "label": "首页显示最热 10 条",
        "default": true
      },
      {
        "id": "is_allow_published_at",
        "type": "checkbox",
        "label": "页面是否展示发布日期",
        "default": true
      },
      {
        "id": "is_allow_author",
        "type": "checkbox",
        "label": "页面是否展示作者信息",
        "default": true
      }
    ]
  },
